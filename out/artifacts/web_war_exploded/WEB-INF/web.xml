<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.kaishengit.web.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeServlet</servlet-name>
        <servlet-class>com.kaishengit.web.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>saveServlet</servlet-name>
        <servlet-class>com.kaishengit.web.SaveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delServlet</servlet-name>
        <servlet-class>com.kaishengit.web.DelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editServlet</servlet-name>
        <servlet-class>com.kaishengit.web.EditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>com.kaishengit.web.UpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.kaishengit.web.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/home.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>saveServlet</servlet-name>
        <url-pattern>/save.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delServlet</servlet-name>
        <url-pattern>/del.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editServlet</servlet-name>
        <url-pattern>/edit.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/update.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>wecomServlet</servlet-name>
        <servlet-class>com.kaishengit.web.WelcomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>wecomServlet</servlet-name>
        <url-pattern>/welcome.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>lastServlet</servlet-name>
        <servlet-class>com.kaishengit.web.LastServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>lastServlet</servlet-name>
        <url-pattern>/last.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>lastdeletServlet</servlet-name>
        <servlet-class>com.kaishengit.web.LastdeletServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.kaishengit.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatchServlet</servlet-name>
        <servlet-class>com.kaishengit.web.PatchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>com.kaishengit.web.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>com.kaishengit.web.DownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportCsvServlet</servlet-name>
        <servlet-class>com.kaishengit.web.ExportCsvServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportXlsServlet</servlet-name>
        <servlet-class>com.kaishengit.web.ExportXlsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportXlsServlet</servlet-name>
        <servlet-class>com.kaishengit.web.ImportXlsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QiniuServlet</servlet-name>
        <servlet-class>com.kaishengit.web.QiniuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CallbackServlet</servlet-name>
        <servlet-class>com.kaishengit.web.CallbackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportSqlServlet</servlet-name>
        <servlet-class>com.kaishengit.web.ExportSqlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExportSqlServlet</servlet-name>
        <url-pattern>/exportsql.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportXlsServlet</servlet-name>
        <url-pattern>/importxls.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExportXlsServlet</servlet-name>
        <url-pattern>/exportxls.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExportCsvServlet</servlet-name>
        <url-pattern>/exportcsv.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/download.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatchServlet</servlet-name>
        <url-pattern>/image.png</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>lastdeletServlet</servlet-name>
        <url-pattern>/lastdel.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/upload.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CallbackServlet</servlet-name>
        <url-pattern>/callback.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QiniuServlet</servlet-name>
        <url-pattern>/qiniu.do</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>EncodeFilter</filter-name>
        <filter-class>com.kaishengit.web.filter.EncodeFilter</filter-class>
        <init-param>
            <param-name>encode</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>ViladataFilter</filter-name>
        <filter-class>com.kaishengit.web.filter.ViladataFilter</filter-class>
        <init-param>
            <param-name>staticPath</param-name>
            <param-value>/static/</param-value>
        </init-param>
        <init-param>
            <param-name>exceptStaticPath</param-name>
            <param-value>/,/index.do,/login.do,/index.jsp,/image.png</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ViladataFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <!-- 配置错误页-->
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.kaishengit.exception.DataException</exception-type>
        <location>/WEB-INF/views/error/exception.jsp</location>
    </error-page>

</web-app>